<script>
        
    document.getElementById('helpButton').addEventListener('click', function () {
// Determine the current language (default to English)
const lang = new URLSearchParams(window.location.search).get('lng') || getCookie('lng') || 'en';

// Define translations for the steps
const translations = {
    en: {
        step1: "Add the first and last name of the doctor.",
        step2: "Assign a speciality or department to the doctor.",
        step3: "Click to add the doctor to your clinic.",
        step4: "View username, speciality, and assigned surveys here.",
        step5: "Edit or delete a doctor from your clinic here.",
        step6: "Enter the first and last name of the staff.",
        step7: "Click to assign reception staff to oversee collections and send reminders.",
        step8: "Edit or delete a staff member from your clinic here."
    },
    ar: {
        step1: "أدخل الاسم الأول واسم العائلة للطبيب.",
        step2: "قم بتعيين تخصص أو قسم للطبيب.",
        step3: "انقر لإضافة الطبيب إلى عيادتك.",
        step4: "عرض اسم المستخدم، التخصص، والاستبيانات المخصصة هنا.",
        step5: "تحرير أو حذف طبيب من عيادتك هنا.",
        step6: "أدخل الاسم الأول واسم العائلة للموظف.",
        step7: "انقر لتعيين موظفي الاستقبال للإشراف على معدلات التحصيل وإرسال التذكيرات.",
        step8: "تحرير أو حذف موظف من عيادتك هنا.",
        
    }
};

// Define the steps for Intro.js
const introSteps = [
    {
        element: '#firstName', // Add doctor's name
        intro: translations[lang].step1
    },
    {
        element: '#speciality', // Assign speciality
        intro: translations[lang].step2
    },
    {
        element: '#addProviderButton', // Add doctor button
        intro: translations[lang].step3
    },
    {
        element: 'tr[style="position: sticky;"]', // View data
        intro: translations[lang].step4
    },
    {
        element: '#actionHeader', // Edit/Delete doctor
        intro: translations[lang].step5
    },
    {
        element: '#firstNamee', // Add staff's name
        intro: translations[lang].step6
    },
    {
        element: '#addStaffButton', // Add staff button
        intro: translations[lang].step7
    },
    {
        element: '#actionHeaderr', // Edit/Delete staff
        intro: translations[lang].step8
    }
];

// Initialize and start Intro.js with dynamic labels for buttons
introJs()
    .setOptions({
        steps: introSteps,
        rtl: lang === 'ar', // Enable RTL if the language is Arabic
        nextLabel: lang === 'ar' ? 'التالي' : 'Next',
        prevLabel: lang === 'ar' ? 'السابق' : 'Back',
        doneLabel: lang === 'ar' ? 'تم' : 'Done'
    })
    .start();
});

// Helper function to retrieve a cookie value by name
function getCookie(name) {
const value = `; ${document.cookie}`;
const parts = value.split(`; ${name}=`);
