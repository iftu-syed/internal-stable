<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Get form and save button
        const form = document.querySelector('form.addAdmin');
        const saveButton = document.getElementById('saveChangesButton');
        const cancelButton = document.getElementById('cancelButton');
        
        // Get modal elements
        const modal = document.getElementById('customConfirmModal');
        const confirmTitle = document.getElementById('confirmTitle');
        const confirmMessage = document.getElementById('confirmMessage');
        const confirmOk = document.getElementById('confirmOk');
        const confirmCancel = document.getElementById('confirmCancel');
        
        // Store original form values
        const originalValues = {
            firstName: document.getElementById('firstName').value,
            lastName: document.getElementById('lastName').value,
            speciality: document.getElementById('speciality').value,
            isLocked: document.getElementById('isLocked').checked,
            resetPassword: document.getElementById('resetPassword').checked
        };
        
        // Function to check if form has changes
        function hasFormChanged() {
            if (document.getElementById('firstName').value !== originalValues.firstName) return true;
            if (document.getElementById('lastName').value !== originalValues.lastName) return true;
            if (document.getElementById('speciality').value !== originalValues.speciality) return true;
            if (document.getElementById('isLocked').checked !== originalValues.isLocked) return true;
            if (document.getElementById('resetPassword').checked !== originalValues.resetPassword) return true;
            return false;
        }
        
        // Create back button (to replace Cancel button when needed)
        const backButton = document.createElement('button');
        backButton.id = 'backButton';
        backButton.type = 'button';
        backButton.className = 'edit-btn';
        backButton.innerHTML = '<i class="bx bx-arrow-back"></i> <span id="backButtonLabel">Back</span>';
        // backButton.style.backgroundColor = '#6c757d';
        
        // Add event listener to back button
        backButton.addEventListener('click', function() {
            // Navigate back to the doctors list page
            window.location.href = cancelButton.parentElement.getAttribute('href');
        });
        
        // Function to update UI based on form state
        function updateUIState() {
            const hasChanges = hasFormChanged();
            
            // Enable/disable save button based on changes
            saveButton.disabled = !hasChanges;
            saveButton.style.opacity = hasChanges ? '1' : '0.5';
            saveButton.style.cursor = hasChanges ? 'pointer' : 'not-allowed';
            
            // Replace cancel button with back button when no changes
            const cancelButtonParent = cancelButton.parentElement;
            if (!hasChanges && cancelButtonParent.contains(cancelButton)) {
                cancelButtonParent.replaceChild(backButton, cancelButton);
            } else if (hasChanges && cancelButtonParent.contains(backButton)) {
                cancelButtonParent.replaceChild(cancelButton, backButton);
            }
        }
        
        // Add event listeners to all form inputs
        const formInputs = form.querySelectorAll('input, select');
        formInputs.forEach(input => {
            input.addEventListener('change', updateUIState);
            input.addEventListener('input', updateUIState);
        });
        
        // Function to show the modal
        function showModal() {
            updateModalLanguage();
            modal.style.display = 'flex';
            document.body.classList.add('modal-open');
        }
        
        // Function to hide the modal
        function hideModal() {
            modal.style.display = 'none';
            document.body.classList.remove('modal-open');
        }
        
        // Function to update modal language based on current language
        function updateModalLanguage() {
            const params = new URLSearchParams(window.location.search);
            const currentLanguage = params.get('lng') || getCookie('lng') || 'en';
            
            if (currentLanguage === 'ar') {
                confirmTitle.textContent = 'تأكيد التغييرات';
                confirmMessage.textContent = 'هل أنت متأكد أنك تريد حفظ هذه التغييرات؟';
                confirmCancel.textContent = 'إلغاء';
                confirmOk.textContent = 'حفظ';
                modal.setAttribute('dir', 'rtl');
            } else {
                confirmTitle.textContent = 'Confirm Changes';
                confirmMessage.textContent = 'Are you sure you want to save these changes?';
                confirmCancel.textContent = 'Cancel';
                confirmOk.textContent = 'Save';
                modal.setAttribute('dir', 'ltr');
            }
        }
        
        // Handle form submission
        form.addEventListener('submit', function(event) {
            if (hasFormChanged()) {
                // If form has changes, show confirmation modal
                event.preventDefault();
                showModal();
            } else {
                // If no changes, prevent form submission
                event.preventDefault();
            }
        });
        
        // Handle confirmation modal buttons
        confirmOk.addEventListener('click', function() {
            hideModal();
            form.submit(); // Submit the form
        });
        
        confirmCancel.addEventListener('click', function() {




            
            hideModal();
        });
        
        // Close modal when clicking outside
        modal.addEventListener('click', function(event) {
            if (event.target === modal) {
                hideModal();
            }
        });
        
        // Close modal with ESC key
        document.addEventListener('keydown', function(event) {
            if (event.key === 'Escape' && modal.style.display === 'flex') {
                hideModal();
            }
        });
        
        // Initialize UI state on page load
        updateUIState();
    });
    </script>
