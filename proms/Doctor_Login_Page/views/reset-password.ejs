                <i class="bx bx-show password-toggle-icon" onclick="togglePassword('newPassword', this)"></i>
            </div>

            <div class="input-container">
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirm Password" required>
                <i class="bx bx-show password-toggle-icon" onclick="togglePassword('confirmPassword', this)"></i>
            </div>
            <span 
    id="passwordHint" 
    class="password-hint" 
    style="display: flex; text-align: left; margin-bottom: 20px; margin-inline: 12px; color: #333333; font-size: 12px;">
    Hint: Use at least 8 characters, including uppercase, lowercase, numbers, and special characters.
</span>
        
            <div id="password-error" class="flash-message error" style="display: none;"></div>
        
            <% if (error_msg && error_msg.length > 0 ) { %>
                <div class="flash-message error"><%= error_msg %></div>
            <% } %>
        
            <button type="submit" id="updatePassword" class="lgbtn">Update Password</button>
            <hr class="spacer">
        </form>
        
