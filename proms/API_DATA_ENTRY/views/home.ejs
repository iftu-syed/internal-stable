<script>
// Improved date range filtering
document.addEventListener('DOMContentLoaded', function() {
  // Initialize variables
  let currentPage = 1;
  const rowsPerPage = 10;
  let allRows = [];
  let activeFilters = {
    search: '',
    specialty: '',
    dateRange: {
      start: null,
      end: null
    }
  };

  // Format date for display (compact format)
  function formatDate(dateStr) {
    if (!dateStr) return '';
    
    try {
      // Parse date parts from ISO string (YYYY-MM-DD)
      const [year, month, day] = dateStr.split('-').map(Number);
      
      // Get current language
      const isArabic = document.documentElement.dir === 'rtl';
      
      if (isArabic) {
        // Arabic short format
        return `${day}/${month}/${year}`;
      } else {
        // US short format (MM/DD/YY)
        return `${month}/${day}/${year.toString().substr(2, 2)}`;
      }
    } catch (e) {
      console.error("Error formatting date:", dateStr);
      return dateStr;
    }
  }

  // Get all rows when page loads
  function initializeTable() {
    allRows = Array.from(document.querySelectorAll("#patientTableBody tr"));
    refreshPagination();
  }

  // Update pagination based on current filters
  function refreshPagination() {
    const filteredRows = getFilteredRows();
    renderRows(filteredRows);
    renderPaginationControls(filteredRows);
    updateFilterIndicators();
  }

  // Extract date only (no time) from date strings like "1/20/2025, 1:54 PM"
  function extractDateParts(dateStr) {
    try {
      // Extract just the date part (before the comma)
      const datePart = dateStr.split(',')[0].trim();
      
      // Split by slashes
      const parts = datePart.split('/');
      
      // Extract month, day, year
      if (parts.length === 3) {
        return {
          month: parseInt(parts[0], 10),  // Month is the first part (US format)
          day: parseInt(parts[1], 10),    // Day is the second part
          year: parseInt(parts[2], 10)    // Year is the third part
        };
      }
    } catch (e) {
      console.error("Error parsing date:", dateStr, e);
    }
    
    return null;
  }
  
  // Compare two dates (MM/DD/YYYY format) without timezone issues
  function compareDates(dateStr1, dateStr2) {
    // Parse the first date
    const date1 = extractDateParts(dateStr1);
    
    // Parse the second date (ISO format YYYY-MM-DD)
    const [year2, month2, day2] = dateStr2.split('-').map(Number);
    
    if (!date1) return 0; // Invalid date
    
    // Compare years
    if (date1.year !== year2) {
      return date1.year - year2;
    }
    
    // Years are equal, compare months
    if (date1.month !== month2) {
      return date1.month - month2;
    }
    
    // Years and months are equal, compare days
    return date1.day - day2;
  }
  
  // Check if a date is within a range (inclusive)
  function isDateInRange(dateStr, startDateStr, endDateStr) {
    return (
      compareDates(dateStr, startDateStr) >= 0 && 
      compareDates(dateStr, endDateStr) <= 0
    );
  }

  // Apply all active filters and return matching rows
  function getFilteredRows() {
    return allRows.filter(row => {
      // Search filter (MR number, name, phone)
