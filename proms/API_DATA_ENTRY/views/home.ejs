      const endFormatted = formatDate(activeFilters.dateRange.end);
      
      // Check if same day
      if (activeFilters.dateRange.start === activeFilters.dateRange.end) {
        dateRangeDisplay.textContent = startFormatted;
      } else {
        dateRangeDisplay.textContent = `${startFormatted} - ${endFormatted}`;
      }
    } else {
      dateFilter.classList.remove('has-filter');
    }
  }

  // Initialize flatpickr for date range filtering
  function initializeDateFilter() {
    // Get language for flatpickr localization
    const isArabic = document.documentElement.dir === 'rtl';
    const locale = isArabic ? 'ar' : 'en';
    
    const flatpickrInstance = flatpickr("#appointmentDateFilter", {
      mode: "range",
      dateFormat: "Y-m-d",
      locale: locale,
      showMonths: 1,
      static: true,
      onChange: function(selectedDates) {
        if (selectedDates.length === 2) {
          // Format dates as YYYY-MM-DD strings to avoid timezone issues
          activeFilters.dateRange.start = selectedDates[0].toISOString().split('T')[0];
          activeFilters.dateRange.end = selectedDates[1].toISOString().split('T')[0];
          
          currentPage = 1; // Reset to first page when filter changes
          refreshPagination();
        }
      }
    });
    
    // Store flatpickr instance globally for button access
    window.appointmentFlatpickr = flatpickrInstance;
    
    // Clear filter function for global access
    window.clearDateRangeFilter = function() {
      flatpickrInstance.clear();
      activeFilters.dateRange.start = null;
      activeFilters.dateRange.end = null;
      currentPage = 1;
      refreshPagination();
    };
  }

  // Initialize search filter
  function initializeSearchFilter() {
    const searchInput = document.getElementById('patientSearch');
    
    searchInput.addEventListener('input', function() {
      activeFilters.search = this.value.toLowerCase();
      currentPage = 1; // Reset to first page when filter changes
      refreshPagination();
    });
  }

  // Make speciality filter global
  window.filterSpeciality = function(specialty) {
    activeFilters.specialty = specialty;
    currentPage = 1; // Reset to first page when filter changes
    refreshPagination();
  };

  // Initialize specialty dropdown
  function populateSpecialityDropdown() {
    const specialitySet = new Set();
    
    allRows.forEach(row => {
      const specialityText = row.cells[2].textContent.trim();
      if (specialityText) {
        specialitySet.add(specialityText);
      }
    });
    
    const specialityList = document.getElementById("specialityList");
    specialityList.innerHTML = '';
    
    // Add "All" option
    const allOption = document.createElement("li");
    allOption.innerHTML = '<a href="#" onclick="filterSpeciality(\'\')">All</a>';
    specialityList.appendChild(allOption);
    
    // Add each speciality
    specialitySet.forEach(function(speciality) {
      const listItem = document.createElement("li");
      listItem.innerHTML = '<a href="#" onclick="filterSpeciality(\'' + speciality + '\')">' + speciality + '</a>';
      specialityList.appendChild(listItem);
    });
  }

  // Initialize all components
  function initializeComponents() {
    initializeTable();
    initializeDateFilter();
    initializeSearchFilter();
    populateSpecialityDropdown();
  }
  
  // Call initialization when DOM is loaded
  initializeComponents();
});
