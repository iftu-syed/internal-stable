<script>
document.addEventListener("DOMContentLoaded", () => {
    // helper to read cookies
    const getCookie = (name) => {
        const value = `; ${document.cookie}`;
        const parts = value.split(`; ${name}=`);
        if (parts.length === 2) return parts.pop().split(';').shift();
        return null;
    };

    // determine current language
    const params = new URLSearchParams(window.location.search);
    let currentLanguage = params.get('lng') || getCookie('lng') || 'en';
    document.cookie = `lng=${currentLanguage}; path=/`;

    const fetchUrl = `/staff/locales/${currentLanguage}/translation.json`;

    fetch(fetchUrl)
        .then(response => {
            if (!response.ok) {
                console.warn(
                  `Translation file not found for "${currentLanguage}". Falling back to en.`
                );
                return fetch(`/staff/locales/en/translation.json`);
            }
            return response.json();
        })
        .then(translations => {
            console.log("Loaded translations:", translations);

            Object.entries(translations).forEach(([id, translationValue]) => {
                const el = document.getElementById(id);
                if (!el) return;

                // 1) Inputs/Textareas → placeholder
                if (el.tagName === "INPUT" || el.tagName === "TEXTAREA") {
                    if (typeof translationValue === "string") {
                        el.placeholder = translationValue;
                    }
                    return;
                }

                // 2) If this container has a .appointment-label child, update *only* that
                const nestedLabel = el.querySelector(".appointment-label");
                if (nestedLabel) {
                    nestedLabel.textContent = translationValue;
                    return;
                }

                // 3) Otherwise, for plain strings update textContent
                if (typeof translationValue === "string") {
                    el.textContent = translationValue;
                }
                // 4) For objects (e.g. lists), rebuild children
                else if (typeof translationValue === "object") {
                    el.innerHTML = "";
                    Object.values(translationValue).forEach(item => {
                        const li = document.createElement("li");
                        li.textContent = item;
                        el.appendChild(li);
                    });
                } else {
                    console.warn(
                      `Unexpected translation type for "${id}":`,
                      translationValue
                    );
                }
            });
        })
        .catch(error => console.error("Error loading translations:", error));
});
</script>

